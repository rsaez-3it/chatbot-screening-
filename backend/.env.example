# ==================== GENERAL ====================
NODE_ENV=development
PORT=4000
HOST=localhost

# ==================== BASE DE DATOS ====================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=chatbot_screening

# Pool de conexiones (opcional)
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==================== EMAIL ====================
# Para Gmail: usa smtp.gmail.com y genera una "App Password" en tu cuenta de Google
# Para otros proveedores: consulta su documentación SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password-aqui
EMAIL_FROM_NAME=ChatBot 3IT

# Email debug (opcional)
EMAIL_DEBUG=false
EMAIL_REJECT_UNAUTHORIZED=true

# ==================== FRONTEND ====================
FRONTEND_URL=http://localhost:3000

# CORS - URLs permitidas separadas por coma (múltiples separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ENABLED=true
CORS_CREDENTIALS=true

# ==================== URLS Y ASSETS ====================
COMPANY_LOGO_URL=https://static.wixstatic.com/media/3ec04d_1f1f0d021fce4472a254b66aca24f876~mv2.png

# ==================== OPENAI (Opcional - para evaluaciones IA) ====================
# OPENAI_API_KEY=sk-tu-api-key-aqui
# OPENAI_MODEL=gpt-3.5-turbo
# OPENAI_MAX_TOKENS=500

# ==================== SEGURIDAD ====================
# JWT (para autenticación futura)
JWT_SECRET=change-this-secret-in-production
JWT_EXPIRATION=24h

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Timeouts (en milisegundos)
DB_CONNECT_TIMEOUT=10000
HTTP_TIMEOUT=30000
REQUEST_SIZE_LIMIT=10mb

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=false
LOG_DIRECTORY=./logs

# ==================== SESIONES ====================
SESSION_EXPIRATION_DAYS=7
SESSION_TOKEN_LENGTH=32

# ==================== EVALUACIONES ====================
EVAL_DEFAULT_THRESHOLD=70
IA_PROVIDER=openai
IA_ENABLED=true
